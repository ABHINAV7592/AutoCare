@model service_booking.Models.Vehicle


<div class="container mt-4">
    <h2>Add Vehicle</h2>

    <form asp-action="Add" asp-controller="Vehicle" method="post">


        <div class="mb-3">
            <label class="form-label">Vehicle Number</label>
            <input asp-for="vehicle_number" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Brand</label>
            <input asp-for="brand" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Model</label>
            <input asp-for="model" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Manufacturing Year</label>
            <input asp-for="manufacturing_year" type="number" class="form-control" />

        </div>

        <button type="submit" class="btn btn-primary">
            Add Vehicle
        </button>
    </form>
</div>
