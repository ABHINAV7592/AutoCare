@model service_booking.Models.Vehicle

<div class="container mt-4">
    <h2 class="mb-4">Add Vehicle</h2>

    <form asp-action="Add" method="post" class="card p-4 shadow-sm">

        <div class="mb-3">
            <label class="form-label">Vehicle Number</label>
            <input asp-for="vehicle_number" class="form-control" />
            <span asp-validation-for="vehicle_number" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Model</label>
            <input asp-for="model" class="form-control" />
            <span asp-validation-for="model" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Vehicle Type</label>
            <input asp-for="brand" class="form-control" />
            <span asp-validation-for="brand" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">
            Save Vehicle
        </button>
    </form>
</div>
