@model service_booking.Models.BookServiceView

@{
    ViewData["Title"] = "Book Service";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Book Service</h3>

<form asp-action="Create" method="post">

    <div class="mb-3">
        <label class="form-label">Select Vehicle</label>
        <select asp-for="vehicle_id" class="form-select" required>
            <option value="">-- Select Vehicle --</option>
            @foreach (var v in Model.Vehicles)
            {
                <option value="@v.vehicle_id">
                    @v.vehicle_number - @v.brand
                </option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Select Service</label>
        <select asp-for="service_type_id" class="form-select" required>
            <option value="">-- Select Service --</option>
            @foreach (var s in Model.Services)
            {
                <option value="@s.service_type_id">
                    @s.service_name (@s.cost)
                </option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Select Time Slot</label>
        <select asp-for="slot_id" class="form-select" required>
            <option value="">-- Select Slot --</option>
            @foreach (var t in Model.Slots)
            {
                <option value="@t.slot_id">
                    @t.slot_date.ToShortDateString()
                    (@t.start_time - @t.end_time)
                </option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">
        Book Service
    </button>
</form>
